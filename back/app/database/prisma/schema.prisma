datasource db {
  provider = "mysql"
  url      = "mysql://root:example@mysql:3306/app_db"
}

model User {
  id        Int        @id @default(autoincrement())
  name      String
  email     String     @unique
  favorites Favorite[]
  chats     Chat[]
}

model Favorite {
  id     Int    @id @default(autoincrement())
  favo1  String
  favo2  String
  favo3  String
  favo4  String
  userId Int
  user   User   @relation(fields: [userId], references: [id])
}

model Chat {
  id        Int    @id @default(autoincrement())
  message   String
  messanger String
  userId    Int
  user      User   @relation(fields: [userId], references: [id])
}
